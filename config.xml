    <plugin name="cordova-plugin-inappbrowser" />
    <plugin name="cordova-plugin-geolocation"  />
    <plugin name="cordova-plugin-whitelist" />
    <plugin spec="https://github.com/katzer/cordova-plugin-local-notifications" source="git" />
    <plugin name="com.ezartech.ezar.videooverlay" />
    <plugin name="cordova-plugin-mauron85-background-geolocation" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
	<!--
	<hook type="after_prepare" src="scripts/res_android.js"/>
	-->
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
	
	
	<gap:splash platform="ios" gap:platform="ios" src="res/screens/ios/screen-iphone-portrait.png" width="320" height="480" />
	<gap:splash platform="ios" gap:platform="ios" src="res/screens/ios/screen-iphone-portrait-2x.png" width="640" height="960" />
	<gap:splash platform="ios" gap:platform="ios" src="res/screens/ios/screen-iphone-portrait-568h-2x.png" width="640" height="1136" />
	<gap:splash platform="ios" gap:platform="ios" src="res/screens/ios/screen-iphone-portrait-667h.png" width="750" height="1334" />
	<gap:splash platform="ios" gap:platform="ios" src="res/screens/ios/screen-iphone-portrait-736h.png" width="1242" height="2208" />
	<gap:splash platform="ios" gap:platform="ios" src="res/screens/ios/screen-ipad-portrait.png" width="768" height="1024" />
	<gap:splash platform="ios" gap:platform="ios" src="res/screens/ios/screen-ipad-portrait-2x.png" width="1536" height="2048" />
	
	<!--
	<hook type="after_prepare" src="scripts/res_ios.js"/>
	<preference name="orientation" value="portrait" />
	-->

	<gap:config-file platform="ios" parent="UIStatusBarHidden">
	  <true/>
    </gap:config-file>
    <gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
	<false/>
    </gap:config-file>
	
    </platform>
    
    
    <preference name="EnableWebGL" value="true" />
    <preference name="xwalkVersion" value="19+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="xwalkMultipleApk" value="true" />
</widget>
