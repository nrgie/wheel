<?xml version='1.0' encoding='utf-8'?>
<widget id="com.holostore.prayerwheel" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Prayer Wheel</name>
    <description>Prayer Wheel</description>
    <author email="info@3dholostorecard.com" href="http://3dholostorecard.com">nrgie</author>
    <content src="index.html" />
    <!--
    <icon src="img/logo.png" />
    -->
    <plugin name="cordova-plugin-inappbrowser" />
    <plugin name="cordova-plugin-geolocation"  />
    <plugin name="cordova-plugin-whitelist" />
    <plugin spec="https://github.com/katzer/cordova-plugin-local-notifications" source="git" />
    <plugin name="com.ezartech.ezar.videooverlay" />
    <plugin name="cordova-plugin-mauron85-background-geolocation" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
	<hook type="after_prepare" src="scripts/res_android.js"/>
	<icon src="img/logo.png" density="ldpi" />
        <icon src="img/logo.png" density="mdpi" />
        <icon src="img/logo.png" density="hdpi" />
        <icon src="img/logo.png" density="xhdpi" />
        <icon src="img/logo.png" density="xxhdpi" />
        <icon src="img/logo.png" density="xxxhdpi" />
        
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
	<hook type="after_prepare" src="scripts/res_ios.js"/>
	<!--
	<icon src="img/logo.png" width="180" height="180" />
        <icon src="img/logo.png" width="60" height="60" />
